{
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Error",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Serilog": {
      "MinimumLevel": "Warning",
      "WriteTo": [
        {
          "Name": "File",
          "Args": {
            "path": "Logs/prod-log-.txt",
            "rollingInterval": "Day",
            "restrictedToMinimumLevel": "Warning"
          }
        }
      ],
      "Enrich": [
        "FromLogContext",
        "WithMachineName",
        "WithThreadId"
      ],
      "Properties": {
        "Application": "PulseERP"
      }
    }
  },
  "EmailSettings": {
    "MailServer": "smtp.prodmail.com",
    "MailPort": 587,
    "SenderName": "PulseERP",
    "FromEmail": "no-reply@pulseerp.com",
    "Password": "prodStrongEmailPassword"
  },
  "JwtSettings": {
    "Issuer": "PulseERP",
    "Audience": "PulseERPClient",
    "SecretKey": "prod_super_secure_secret_key_change_me",
    "TokenExpiryMinutes": 60,
    "RefreshTokenExpiryDays": 7
  },
  "AllowedHosts": "*"
}